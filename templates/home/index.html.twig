{% extends 'base.html.twig' %}

{% block title %}Calendars{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-2 col-md-4">
                <div class="sidepanel">
                    <button class="btn btn-sm btn-outline-primary" onclick="getOauthPopup()"><i class="fas fa-plus"></i> Add new calendar</button>
                    <button class="btn btn-sm btn-outline-primary" onclick="syncAllEvents()"><i class="fas fa-sync-alt"></i> Sync all</button>
                    <hr>
                    <h4>My calendars</h4>
                    <form id="calendars">
                    </form>
                </div>

            </div>
            <div class="col-12 col-lg-10 col-md-8">
                <div id='calendar'></div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" id="addCalendarModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addNewCalendar">
                    <div class="modal-header">
                        <h5 class="modal-title">Available calendars</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <select class="custom-select" id="selectCalendar">
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="addNewGoogleCalendar()">Add calendar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="/assets/js/main.js"></script>
    <script>
        $(window).on('load', () => {
            initializeCalendarPage()
        })
    </script>
{% endblock %}
